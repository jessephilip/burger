<div class="center">
    <img src="http://placehold.it/150x150" alt="burger image">
    <h1>Burger Time</h1>
    <form>
        <div class="input-field">
            <textarea id="textArea" class="materialize-textarea"></textarea>
            <label for="textArea">Make an Order</label>
        </div>
    </form>
    <a id="pushMe" class="btn">Push Me</a>
</div>

{{#each burger }}
    <div class="row">
        <div class="col s3">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">{{{burger_name}}}</span>
                </div>
                <div class="card-action">
                    <a class="devourButton" id="{{{this.id}}}">Devour Me</a>
                </div>
            </div>
        </div>
    </div>
{{/each}}
